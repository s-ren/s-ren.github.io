---
interface Props {
  title: string;
  startDate: string;
  endDate: string;
  url: string;
  order: string;
}

const { title, startDate, endDate, url, order } = Astro.props as Props;
---

<a class="project-card" aria-label={`View project '${title}'`}>
  <div class="flex flex-col gap-3 p-4 rounded-xl border border-gray-200 dark:border-n700 dark:hover:bg-n800 transition-all">
    
    <!-- Title -->
    <h6 class="font-semibold text-xl text-n500 dark:text-white">
      <a href={url}>
        {title}
      </a>
    </h6>

    <!-- Status -->
    <p class="text-sm italic text-n400 dark:text-n300">
      {status}
    </p>
  </div>
</a>
