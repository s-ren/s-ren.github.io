---
interface Props {
    width: number;
    height: number;
}
const { width, height } = Astro.props;

---
<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width={width} height={height} fill="none">
    <path fill="#0A0A30"
          d="M12.75 6.432a.75.75 0 00-1.5 0h1.5zm-1.5 6a.75.75 0 001.5 0h-1.5zm-1.22-2.53a.75.75 0 10-1.06 1.06l1.06-1.06zm1.97 3.03l-.53.53a.75.75 0 001.06 0l-.53-.53zm3.03-1.97a.75.75 0 00-1.06-1.06l1.06 1.06zm-3.78-4.53v6h1.5v-6h-1.5zm-2.28 4.53l2.5 2.5 1.06-1.06-2.5-2.5-1.06 1.06zm3.56 2.5l2.5-2.5-1.06-1.06-2.5 2.5 1.06 1.06z"
          class="animate-slide-right"/>
    <path stroke="#0A0A30" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 17.274h8"/>
</svg>

<style>
   svg:hover .animate-slide-right {
        animation: slide-right .5s cubic-bezier(1, -.43, .68, .57) infinite alternate both;
    }
    @keyframes slide-right {
        0% {
            transform: translateY(0)
        }
        to {
            transform: translateY(1px)
        }
    }
</style>