<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none">
    <path d="M7.361 7.111a1.556 1.556 0 110-3.111 1.556 1.556 0 010 3.111z"
          class="fill-primary-light linkedin-anim"/>
    <path class="fill-dark-theme dark:fill-light-theme"
          d="M10.473 18h3.11v-5.25a1.411 1.411 0 011.364-1.512 1.762 1.762 0 011.748 1.512V18h3.11v-5.639a3.5 3.5 0 00-3.48-3.51 3.592 3.592 0 00-2.741 1.371V8.667h-3.111V18zm-4.667 0h3.111V8.667H5.806V18z"/>
</svg>


<style>
    svg:hover .linkedin-anim {
        animation: linkedin 2s infinite both cubic-bezier(1,-.08,0,1.12);
    }

    @keyframes linkedin {
        0% {
            transform: translateY(0);
            animation-timing-function: ease-in;
            opacity: 1
        }
        24% {
            opacity: 1
        }
        40%, 65% {
            transform: translateY(-3px);
            animation-timing-function: ease-in
        }
        82% {
            transform: translateY(-2px);
            animation-timing-function: ease-in
        }
        93% {
            transform: translateY(-1px);
            animation-timing-function: ease-in
        }
        25%, 55%, 75%, 87% {
            transform: translateY(0);
            animation-timing-function: ease-out
        }
        to {
            transform: translateY(0);
            animation-timing-function: ease-out;
            opacity: 1
        }
    }
</style>