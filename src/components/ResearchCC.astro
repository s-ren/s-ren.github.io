---
// astro imports
import {getCollection} from "astro:content";

// components imports
import ResearchCard from "./ResearchCard.astro";
import {buttonVariants} from "./ui/button";

const allResearch = (await getCollection('research'));
---

<!--Grid section to show the research in to columns -->
<>
    <section class="mt-4 w-full">
        <div class="flex flex-col gap-0">
            {
                allResearch.sort((a, b) => b.data.order - a.data.order)
                .map((research) => (
                        <ResearchCard
                                id={research.id}
                                title={research.data.title}
                                abstract={research.data.abstract}
                                status={research.data.status}
                                url={research.data.url}
                        />
                ))
            }
        </div>
    </section>
</>